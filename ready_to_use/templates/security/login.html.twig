{% extends 'base.html.twig' %}

{% block title 'Se connecter' %}

{% block body %}
    <body>


    <img class="wave" src="{{ asset('image/bg.png') }}">

    <div class="test">

        <div class="img">
            <img src="{{ asset('image/wave.svg')}}">

        </div>

        <div class="login-content">


        <form action="{{ path('login') }}" method="post">
            <img src="{{ asset('image/avatar.svg')}}">
            <div class="input-div one">
                <div class="i">
                    <i class="fas fa-user"></i>
                </div>
                <div class="div">
                    <h5>Nom d'utilisateur</h5>
                    <input type="text" id="username" name="_username" class="input" value="{{ last_username }}">
                </div>
            </div>
            <div class="input-div pass">
                <div class="i">
                    <i class="fas fa-lock"></i>
                </div>
                <div class="div">
                    <h5>Mot de passe</h5>
                    <input type="password" id="password" name="_password" class="input">
                </div>
            </div>
            <a href="{{ path('signup') }}" id="href">S'inscrire</a>

            <input type="submit" class="btn" value="Se connecter">

            {% if error %}
                <p class="error">

                {{ error.messageKey | trans(error.messageData, 'security')  }}
                </p>

            {% endif %}

        </form>

    </div>

    </div>
    </body>
    <script type="text/javascript" src="{{ asset('js/main.js') }}"></script>
{% endblock %}