{% extends 'base.html.twig' %}

{% block title %}Aperçu d'un modèle{% endblock %}

{% block body %}
    <h3 class="mb-4">{{ model.name }}</h3>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ model.id }}</td>
        </tr>
        <tr>
            <th>Nom</th>
            <td>{{ model.name }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ model.description }}</td>
        </tr>
        <tr>
            <th>Date de sortie</th>
            <td>{{ model.releaseDate|date('d-m-Y') }}</td>
        </tr>
        </tbody>
    </table>

    <div class="d-flex">
        <a class="btn btn-secondary mr-2" href="{{ path('admin.model.edit', {'id': model.id}) }}">Modifier</a>
        {{ include('admin/model/_delete_form.html.twig') }}
        <a class="btn btn-primary mr-2" href="{{ path('admin.model.index') }}">Retour</a>
    </div>
{% endblock %}
