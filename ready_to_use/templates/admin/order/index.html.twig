{% extends 'base.html.twig' %}

{% block title %}Liste des commandes{% endblock %}

{% block body %}
    <div class="container mt-4">

        <h3 class="mb-4">Liste des commandes</h3>
        <table class="table">
            <thead>
            <tr>
                <th class="p-4">Id</th>
                <th class="p-4">Commandé par</th>
                <th class="p-4">Commandé le</th>
                <th class="p-4">Statut</th>
                <th class="p-4">Prix</th>
                <th class="p-4">Action</th>
            </tr>
            </thead>
            <tbody>
            {% for order in orders %}
                <tr>
                    <td class="p-4">{{ order.id }}</td>
                    <td class="p-4">{{ order.orderedBy.email }}</td>
                    <td class="p-4"> {{ order.requestDate|date('d-m-Y à H:i') }}</td>
                    <td class="p-4">{{ order.statusToString }}</td>
                    <td class="p-4">{{ order.total }} €</td>
                    <td class="p-4">
                        <a id="button" href="{{ path('admin.order.show', {'id': order.id}) }}">Voir</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">Aucune commande</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
