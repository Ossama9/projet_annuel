{% extends 'base.html.twig' %}

{% block title %}Aperçu d'une marque{% endblock %}

{% block body %}
    <h3 class="mb-4">{{ brand.name }}</h3>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ brand.id }}</td>
        </tr>
        <tr>
            <th>Nom</th>
            <td>{{ brand.name }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ brand.description }}</td>
        </tr>
        <tr>
            <th>Siège</th>
            <td>{{ brand.location }}</td>
        </tr>
        <tr>
            <th>Date de fondation</th>
            <td>{{ brand.foundationDate|date('d-m-Y') }}</td>
        </tr>
        </tbody>
    </table>

    <div>
        <h5 class="mb-4">Liste des modèles de la marque {{ brand.name }}</h5>
        <div class="row">
            {% for model in brand.models %}
                {{ include('/admin/model/_card.html.twig', {model: model}) }}
            {% else %}
                <p class="ml-3">Aucun modèle</p>
            {% endfor %}
        </div>
    </div>

    <div class="d-flex">
        <a class="btn btn-secondary mr-2" href="{{ path('admin.brand.edit', {'id': brand.id}) }}">Modifier</a>
        {{ include('admin/brand/_delete_form.html.twig') }}
        <a class="btn btn-primary mr-2" href="{{ path('admin.brand.index') }}">Retour</a>
    </div>
{% endblock %}
