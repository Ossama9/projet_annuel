{% extends 'base.html.twig' %}

{% block title %}Liste des marques{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h3 class="mb-4">Liste des marques</h3>
        <table class="table">
            <thead>
            <tr>
                <th class="p-4">Id</th>
                <th class="p-4">Nom</th>
                <th class="p-4">Description</th>
                <th class="p-4">Siège</th>
                <th class="p-4">Date de fondation</th>
                <th class="p-4">Voir</th>
                <th class="p-4">Modifier</th>
            </tr>
            </thead>
            <tbody>
            {% for brand in brands %}
                <tr class="tr-tab">

                    <td class="p-4">{{ brand.id }}</td>
                    <td class="p-4">{{ brand.name }}</td>
                    <td class="wh p-4" >{{ brand.description }}</td>
                    <td class="p-4">{{ brand.location }}</td>
                    <td class="p-4">{{ brand.foundationDate|date('d-m-Y') }}</td>
                    <td class="p-4">
                        <a id="button" href="{{ path('admin.brand.show', {'id': brand.id}) }}">Voir</a>

                    </td>
                    <td class="p-4">
                        <a id="button"
                           href="{{ path('admin.brand.edit', {'id': brand.id}) }}">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">Aucun entrepôt</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <a id="button" href="{{ path('admin.brand.new') }}">Ajouter une marque</a>

    </div>


{% endblock %}
