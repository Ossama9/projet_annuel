{% extends 'base.html.twig' %}

{% block title 'Mon compte' %}

{% block body %}

    <div class="container mt-4">
        <h1>Mon compte</h1>
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        <div class="jumbotron">
            {{ form_start(form) }}
            <div class="row">
                <div class="col-md-6">{{ form_row(form.username) }}</div>
                <div class="col-md-6">{{ form_row(form.email) }}</div>
            </div>
            <div class="row">
                <div class="col-md-4">{{ form_row(form.firstName) }}</div>
                <div class="col-md-4">{{ form_row(form.lastName) }}</div>
            </div>
            {{ form_widget(form) }}
            <button class="btn btn-primary">{{ button|default('Enregistrer') }}</button>
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}