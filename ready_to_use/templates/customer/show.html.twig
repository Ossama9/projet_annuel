{% extends 'base.html.twig' %}

{% block title %}{{ product.model.name }}{% endblock %}

{% block body %}
    <div>
        <h2>{{ product.model.name }}</h2>
        <h3>Categorie - details</h3>
        <p>{{ product.description }}</p>
    </div>
    <div>
        <p>condition : {{ product.productCondition }}</p>
    </div>
    <div>
        <strong>Caractéristiques techniques</strong>
        <p>- Taille écran: 5"8</p>
        <p>- Stockage: 64Go</p>
        <p>- Mémoire vive: 4go</p>
        <p>- Marque: {{ product.model.brand.name }}</p>
    </div>
    <div>
        <button class="btn btn-success">Ajouter au panier</button>
    </div>


{% endblock %}