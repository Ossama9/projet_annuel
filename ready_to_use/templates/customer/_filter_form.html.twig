<form method="post" action="{{ path("customer.list") }}">
    <div class="form-row">
        <div class="form-group col-md-2">
            <label for="brand" >Trier par marques</label>
            <select name="brand" class="form-control">
                {% for brand in brands %}
                    <option value="{{ brand.id }}">{{ brand.name }}</option>
                {% endfor %}
            </select>
        </div>
        <div class="form-group col-md-2">
            <label for="model" >Trier par models</label>
            <select name="model" class="form-control">
                {% for model in models %}
                    <option value="{{ model.id }}">{{ model.name }}</option>
                {% endfor %}
            </select>
        </div>
        <div class="form-group col-md-2">
            <label for="max_price">Prix Maximum</label>
            <input class="form-control" type="range" name="max_price" min="0" max="1000">
        </div>
    </div>
    <button type="submit" class="btn btn-success mr-2" >Rechercher</button>
</form>
