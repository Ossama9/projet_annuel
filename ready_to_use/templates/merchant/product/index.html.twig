{% extends 'base.html.twig' %}

{% block title %}Liste des produits{% endblock %}

{% block body %}
    {% if merchant %}
    <h3 class="mb-4">Liste de vos produits</h3>

    <table class="table">
        <thead>
        <tr>
            <th>ID</th>
            <th>Modèle</th>
            <th>Condition</th>
            <th>Prix souhaité</th>
            <th>Date de dépôt</th>
            <th>Statut</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.model.name }}</td>
                <td>{% if product.productCondition == 0 %}Bon état{% elseif product.productCondition == 1 %}Très bon état{% else %}Comme neuf{% endif %}</td>
                <td>{{ product.price }} €</td>
                <td>{{ product.depositDate ? product.depositDate|date('d-m-Y à H:i') : '' }}</td>
                <td>{% if product.sell.status == 0 %}En attente{% elseif product.sell.status == 1 %}Accepté{% else %}Refusé{% endif %}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('merchant.product.show', {'id': product.id}) }}">Voir</a>
{#                    <a class="btn btn-secondary" href="{{ path('product.edit', {'id': product.id}) }}">Modifier</a>#}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8=">Aucun produit</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('merchant.product.new') }}">Vendre un produit</a>
    {% else %}
        <p>Vous devez être marchand pour vendre des produits.</p>
        <a class="btn btn-primary" href="{{ path('account.index') }}">Devenir marchand</a>
    {% endif %}
{% endblock %}
