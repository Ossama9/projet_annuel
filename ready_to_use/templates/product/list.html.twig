{% extends 'base.html.twig' %}
{% block title %}
    Accueil Produit
{% endblock %}

{% block body %}
    <table id="example" class="table table-striped table-bordered" style="width:100%">
        <thead>
        <tr>
            <th>Produit</th>
            <th>Price</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        <tr>
            {% for P in Product %}
            <td>{{ P.model}}</td>
            <td>{{ P.brand}}</td>

            <td>
                <a href="{{ path('remove',{'id':P.id}) }}"><i style="color:red" class='material-icons'>delete</i></a>
            </td>
        </tr>
        {% endfor %}

        </tbody>

    </table>

{% endblock %}