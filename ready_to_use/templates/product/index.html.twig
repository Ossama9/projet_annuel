{% extends 'base.html.twig' %}

{% block title %}Liste des produits{% endblock %}

{% block body %}
    <h3 class="mb-4">Liste des produits</h3>

    <div class="jumbotron p-4">
        <h5 class="mt-3 mb-4">{{ products|length }} produit(s) disponible(s)</h5>

        <div class="row">
            {% for product in products %}
                <div class="col-md-4">
                    <div class="card mb-4">
                        <img src="https://via.placeholder.com/200x150" alt="{{ product.model.name }}" class="card-img-top">
                        <div class="card-body">
                            <h5 class="card-title">{{ product.model.brand.name }} - {{ product.model.name }}</h5>
                            <p class="card-text">{{ product.description }}</p>
                            <div class="d-flex justify-content-between align-item-center">
                                <a href="{{ path('product.show', {id: product.id}) }}" class="btn btn-dark">Voir plus</a>
                                <span class="h5 mt-auto">{{ product.price }} â‚¬</span>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <tr>
                    <td colspan="8=">Aucun produit</td>
                </tr>
            {% endfor %}
        </div>
    </div>
{% endblock %}
