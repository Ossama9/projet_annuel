{% extends 'base.html.twig' %}

{% block title %}Liste des produits{% endblock %}

{% block body %}
    <h3 class="mb-4">Liste des produits</h3>

    {{ include("product/_filter_form.html.twig") }}

    <div class="jumbotron p-4">
        <h5 class="mt-3 mb-4">{{ products|length }} produit(s) disponible(s)</h5>

        <div class="row">
            {% for product in products %}
                {{ include('/product/_card.html.twig', {product: product}) }}
            {% else %}
                <tr>
                    <td colspan="8=">Aucun produit</td>
                </tr>
            {% endfor %}
        </div>
    </div>
{% endblock %}


